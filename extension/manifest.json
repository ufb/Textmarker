{
  "manifest_version": 2,
  "name": "Textmarker",
  "version": "3.8.1",

  "applications": {
    "gecko": {
      "id": "textMarker@underFlyingBirches.org",
      "strict_min_version": "42.0"
    }
  },

  "default_locale": "en",

  "background": {
    "scripts": ["background/background.wp.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_globs": ["moz-extension://*/content/addon-page/addon-page.html*"],
      "js": ["content/page-injections/injection.wp.js"],
      "css": ["content/page-injections/injection.css"],
      "all_frames": true
    }
  ],

  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "notifications",
    "menus"
  ],

  "icons": {
    "16": "icons/on16.png",
    "32": "icons/on32.png"
  },

  "browser_action": {
    "default_title": "Textmarker",
    "default_icon": {
      "16": "icons/on16.png",
      "18": "icons/on18.png",
      "32": "icons/on32.png"
    },
    "default_popup": "content/tbb-menu/tbb-menu.html",
    "browser_style": true
  },

  "sidebar_action": {
    "default_title": "Textmarker",
    "default_panel": "content/sidebar/sidebar.html",
    "default_icon": {
      "16": "icons/on16.png",
      "18": "icons/on18.png",
      "32": "icons/on32.png"
    }
  },

  "options_ui": {
    "page": "content/options-ui/options.html",
    "browser_style": true
  }
}
